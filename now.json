{
    "name": "chronogram",
    "alias": "chronogram.now.sh",
    "version": 2,
    "builds": [
        {
            "src": "src/index.ts",
            "use": "@now/node@canary",
            "config": {
                "maxLambdaSize": "40mb"
            }
        },
        {
            "src": "src/endpoints/**/index.ts",
            "use": "@now/node@canary",
            "config": {
                "maxLambdaSize": "40mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "src/endpoints/$1"
        }
    ],
    "env": {
        "STORAGE_BUCKET": "chronogram",
        "BASE_URL": "https://chronogram.now.sh/"
    }
}
